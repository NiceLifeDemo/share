<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.techrc.mapper.UserMapper">

    <select id="findUserInfo" resultType="java.util.Map">

        select * from rc_system_user

         LEFT  JOIN  rc_authrole_user on rc_authrole_user.userid=rc_system_user.id

    </select>


    <insert id="addUser" parameterType="com.techrc.model.User">
        insert into rc_system_user (realName,password,phoneNo  )
        values (#{realName}, #{password},#{phoneNo} )
    </insert>

</mapper>